<!DOCTYPE html>
<html ng-app="todoApp">
	<head>
		<base href="/">
		<title>{{ title }}</title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body ng-controller="todoListController" ng-init="getToDoList()">
	
		<div class="container">
			<div id="todo-list">
				<div class="form-group">
					<div class="controls row">
						<div class="span8 col-lg-8 col-md-8">
							<input type="text" name="newtodo" ng-model="newtodo" value="" placeholder="Task Name" class="form-control">
						</div>
						<div class="span4 col-lg-4 col-md-4">
							<div class="row">
								<input type="number" name="hours" ng-model="hours" value="0" min="0" max="4" placeholder="hour" class="form-input col-lg-5 col-md-5">
								<div class="separator col-lg-1 col-md-1">:</div>
								<input type="number" name="mins" ng-model="mins" value="0" min="0" max="60" placeholder="min" class="form-input col-lg-5 col-md-5"> 
							</div>
						</div>
					</div>
					<div class="controls">
						<button ng-model="addtodo" ng-click="addNewTodo()" class="btn btn-large btn-primary add-todo">Add New Task</button>
					</div>
				</div><br>
				<table class="table table-striped">
					<tbody>
						<tr ng-repeat="(key, value) in todos">
							<td>[[ value.name ]] ([[ value.hours + ':' + value.mins ]])</td>
							<td class="text-right"><span ng-click="startTimer(key)">Start</span>  <span ng-click="removeTodo(key)">Remove</span></td>
						</tr>
					</tbody>
				</table>

			</div>
		</div>

		<div id="running_todo" class="btn-primary" ng-show="timer_started">
			<div class="wrap">
				<p><span id="todo_name">[[ active_todo_name ]]</span></p>
				<p><span id="countdown_timer"></span></p>
				<div id="timer_options">
					<p id="pause"><button ng-click="pauseResumeTimer()" class="btn btn-info">[[ timer_status ]]</button></p>
					<p><button ng-click="stopTimer()" class="btn btn-info">Stop</button></p>
				</div>
			</div>
		</div>

		<script src="/jquery/dist/jquery.min.js"></script>
		<script src="/angular/angular.min.js"></script>
		<script src="/angular-route/angular-route.min.js"></script>
		<script src="/easytimer/src/easytimer.js"></script>
		<script src="/javascripts/core.js"></script>
	</body>
</html>